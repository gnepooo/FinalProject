@model List<FinalProject.Models.StudyGroup>

<h2>Study Groups</h2>

<ul>
    @foreach (var group in Model)
    {
        <li>
            <h3>@group.Name</h3>
            <p>@group.Description</p>
            <p>Created At: @group.CreatedAt.ToShortDateString()</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Join" asp-route-id="@group.Id">Join Group</a>
            }
        </li>
    }
</ul>
