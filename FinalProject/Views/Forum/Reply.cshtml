@model FinalProject.Models.ReplyViewModel

<h2>Reply to Thread</h2>

<form asp-action="Reply">
    <div class="form-group">
        <label>Content</label>
        <textarea class="form-control" asp-for="Content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Post Reply</button>
</form>

<a asp-action="Details" asp-route-id="@Model.ThreadId">Back to Thread</a>
